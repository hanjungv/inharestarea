                <h1 class="page-header" style ="font-size:25px;" text align="center">
                    <%= @types[@po_id.to_i]%> 시설입니다.<br>
                    <small>
                      이용에 필요한 정보를 적었습니다.<br><br>
                    </small>
                </h1>
            </div>
        </div>
        <div>
          <% @rest.each do |p| %>
            <% if p.itstype == @po_id.to_i %>
              <div class="row">
                  <div class="col-md-7">
                      <img class="img-responsive" src="<%=p.image_url%>" alt="">
                  </div>
                  <div class="col-md-5">
                      <h1 style="font-size:20px;"><a class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-tag"></span> </a> <%=p.name%></h1>
                      <h3 style="margin-bottom:20px; font-size:18px"><%=@rooms[p.building-1]%> <%=p.address%></h4>
                      <p style="font-size:18px"><%=p.itsexplain%></p>
                      <br>
                      <p style="font-size:18px;"><a class="btn btn-xs btn-warning"><span class="glyphicon glyphicon-euro"></span> </a> <%=p.costs%></p>
                      <p style="font-size:15px;">제보해주신분: <%=p.whois%></p>
                  </div>
              </div>
              <hr>
            <%end%>
          <%end%>
          <a href="/home/index" class="btn btn-block btn-primary btn-info"><span class="glyphicon glyphicon-chevron-left"></span> 메인화면으로</a><hr>
        </div>

        <hr>
        <footer>
            <div class="row">
                <div class="col-lg-12">
                  <p class="footer-company-name">Hanjung &copy; 2016.07
                  <a href='/home/newval' style="color:white">i</a></p>
            			<p class="footer-company-name">Inha computer Science | CTP | Likelion 4th</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script>
    $(document).ready(function(){
    	//Check to see if the window is top if not then display button
    	$(window).scroll(function(){
    		if ($(this).scrollTop() > 100) {
    			$('.scrollToTop').fadeIn();
    		} else {
    			$('.scrollToTop').fadeOut();
    		}
    	});
    	//Click event to scroll to top
    	$('.scrollToTop').click(function(){
    		$('html, body').animate({scrollTop : 0},800);
    		    return false;
    	     });
      });
    </script>
</body>
